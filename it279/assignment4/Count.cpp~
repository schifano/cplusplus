using namespace std;

int class Count {
	public:
		/* variablest to track all assignments */
		int heap_assignments = 0;
		int insert_assignments = 0;
		int merge_assignments = 0;
		int quick_assignments = 0;
		
		/* variables to track all comparisons */
		int heap_comparisons = 0;
		int insert_comparisons = 0;			
		int merge_comparisons = 0;
		int quick_comparisons = 0;
};
